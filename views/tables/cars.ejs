        <script>
            $(document).ready(function() {
                const table = $('#cars').DataTable({
                    ajax: {
                        url: '/api/cars',
                        dataSrc: 'data.results'
                    },
                    columns: [
                        { title: 'ID', data: 'id' },
                        { title: 'Manufacturer', data: 'manufacturer' },
                        { title: 'Model', data: 'model' },
                        { title: 'YOP', data: 'year_of_production' },
                        { title: 'License', data: 'license_no' },
                        { title: 'Motor Cap', data: 'motor_capacity' },
                        { title: 'Class', data: 'car_class' },
                        { title: 'Push', data: 'push_type' },
                        { title: 'Remarks', data: 'remarks' },
                    ],
                    processing: true,
                    serverSide: true,
                    deferRender: true
                });

                table.on('draw', function(e, settiongs){
                    console.log(e)
                    console.log(settiongs)
                })
            });
        </script>
    </body>
